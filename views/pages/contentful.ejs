<!DOCTYPE html>
<html ng-app="drago-app"> <!-- html gestionado por drago-app-->
<head>
  <% include ../partials/header.ejs %> <!-- incluimos el header.ejs en esta vista html -->
   <script src="/scripts/controllers/contentfulController.js" type="text/javascript"></script>

</head>

<body ng-controller="contentfulController as contCtrl">

  <% include ../partials/nav.ejs %> <!-- incluimos el nav.ejs en esta vista -->

<div class="container">

  <div class="alert alert-info text-center" role="alert">
  
    <div class="row">

      <form>

          <div class="form-group">

            <div class="col-md-8">
              <input type="text" class="form-control" ng-model="searchTxt">
            </div>

            <div class="col-md-4" align="left">
              <button type="submit" class="btn btn-default" ng-click="contCtrl.searchProduct(searchTxt)">Search</button>
            </div>

          </div><!-- form group -->

      </form><!-- form -->

    </div><!-- row -->
    
  </div><!-- alert -->

  <div class="row">

  <div class="col-md-4" ng-repeat="producto in contCtrl.content | limitTo:3"> <!-- PRODUCTO -->
    
    <div class="panel panel-default">

      <div class="panel-heading" align="center">
        {{producto.fields.titulo}}
      </div>

      <div class="panel-body">
        <img ng-src="{{ producto.fields.img.fields.file.url }}" class="img-responsive img-rounded" alt="{{producto.fields.titulo}}" />
        {{producto.fields.descripcion}}
      </div>

    </div><!-- panel-default -->

   </div><!-- col ngrepeat -->

   </div><!-- row -->

   <div class="alert alert-info text-center row" role="alert"> <!-- menu carrusel alert -->

      <div class="col-md-3">
        <button type="submit" class="glyphicon glyphicon-backward" ng-click=""></button>
      </div>
      <div class="col-md-3">
        <button type="submit" class="glyphicon glyphicon-triangle-left" ng-click=""></button>
      </div>
      <div class="col-md-3">
        <button type="submit" class="glyphicon glyphicon-triangle-right" ng-click=""></button>
      </div>
      <div class="col-md-3">
        <button type="submit" class="glyphicon glyphicon-forward" ng-click=""></button>
      </div>

   </div><!-- !!! fin menu carrusel alert -->

</div> <!-- container -->

</body>
</html>
